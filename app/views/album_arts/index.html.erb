<h1>Listing album_arts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Album name</th>
    <th>Artist name</th>
    <th>Image</th>
    <th>Image size</th>
    <th>Image filesize</th>
    <th>Score</th>
    <th>Created at</th>
  </tr>

<% for album_art in @album_arts %>
  <tr>
    <td><%=h album_art.user_id %></td>
    <td><%=h album_art.album_name %></td>
    <td><%=h album_art.artist_name %></td>
    <td><%= image_tag url_for_file_column(album_art,"image","thumbnail") %></td>
    <td><%=h album_art.image_size %></td>
    <td><%=h number_to_human_size(album_art.image_filesize) %></td>
    <td><%=h album_art.score %></td>
    <td><%=h album_art.created_at %></td>
    <td><%= link_to 'Show', album_art %></td>
    <td><%= link_to 'Edit', edit_album_art_path(album_art) %></td>
    <td><%= link_to 'Destroy', album_art, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

