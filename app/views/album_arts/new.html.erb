<h1>New album_art</h1>

<%= error_messages_for :album_art %>

<% form_for :album_art, @album_art, :url=> album_arts_path, :html => {:multipart => true} do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Album name</b><br />
    <%= f.text_field :album_name %>
  </p>

  <p>
    <b>Artist name</b><br />
    <%= f.text_field :artist_name %>
  </p>

  <p>
    <b>Image</b><br />
    <%= file_column_field "album_art", :image %>
  </p>

  <p>
    <b>Created at</b><br />
    <%= f.datetime_select :created_at %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', album_arts_path %>
