<% if @album_arts.size > 0 %>
<ul>
	<% for album_art in @album_arts %>
  		<%if !album_art.album_art_image.blank?%>
	<li class="album_art">
    <%= link_to image_tag(album_art.album_art_image.public_filename(:thumb), :id => "album_art_#{album_art.id}"), album_art %>

	<%= render :partial => 'album_art_info', :locals => { :album_art => album_art } %>

	<% if album_art.user == current_user %>
    <p><%= link_to 'Editar', edit_album_art_path(album_art) %>, 
    <%= link_to 'Apagar', album_art, :confirm => 'Are you sure?', :method => :delete  %></p>
	<% end %>
</li>
  		<% end %>
	<% end %>
</ul>
<% else %>
	<p>Sua busca n√£o encontrou capas</p>
<% end %>
